    <h1>Gestion de tiempos de comida</h1>
    <h3 class="tiempoComida">Tiempo de Comida</h1>
    <h3 class="tipoComida">Tipo de comida</h3>
    <form action="/seleccionGestionTiemposComida" method="POST">
    <div class="custom-selectG" style="width: 200px">
      <div class="select">
        <select id="tiempoC" name="seleccionTiempo">
        
          <option value="Desayuno">Desayuno</option>
          <option value="Almuerzo">Almuerzo</option>
          <option value="Cena">Cena</option>
        </select>
      </div>
      </div>
      <div class="custom-selecttG" style="width: 200px">
        <div class="select">
          <select name="seleccionTipo">
            <option value="Plato Principal">Plato Principal</option>
            <option value="Bebida">Bebida</option>
            <option value="Postre">Postre</option>
          </select>
        </div>
      </div>
      <input class="btn-filtrarG" type="submit" value=Filtrar> 
 
    </form>
    <table  class="gestionTiemposComida">
      <thead class="gestionTiemposComida">
        <tr>
          <th class="gestionTiemposComida">ID</th>
          <th class="gestionTiemposComida" scope="col">NOMBRE</th>
          <th class="gestionTiemposComida" scope="col">PRECIO</th>
          <th class="gestionTiemposComida" scope="col">DISPONIBILIDAD</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach((comida)=>{ %>
        
        <tr>
          <td class="gestionTiemposComida"><%= comida.id %></td>
          <td class="gestionTiemposComida"><%= comida.Nombre %></td>
          <td class="gestionTiemposComida"><%= comida.Precio %></td>
          <td class="gestionTiemposComida"><%= comida.Disponibilidad %></td>
        </tr>

        <% }) %>
      </tbody>
    </table>
    <h2>Gestion de disponibilidad</h2>
    <form action="/disponibilidad" method="POST">
      <input type="text" name="idComida" id="idComida" placeholder="Id" >
      <div class="custom-selectd" style="width: 200px">
      <div class="select">
        <select  id="selectDis" name="seleccionDisponible">
          <option value="Si">Si</option>
          <option value="No">No</option>
         
        </select>
      </div>
      </div>
      <input type="submit" class="btn-confirmarG" value="Confirmar">
    </form>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
